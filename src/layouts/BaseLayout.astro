---
import Header from '../components/Header.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = "Oscar's News", description = "AI-curated news aggregation" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <link rel="alternate" type="application/rss+xml" title="Oscar's News RSS" href="/rss.xml" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <script is:inline>
    var theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
    document.documentElement.setAttribute('data-theme', theme);
    var savedLang = localStorage.getItem('lang') || 'en';
    document.documentElement.setAttribute('data-lang', savedLang);
    if (savedLang !== 'en') {
      document.documentElement.classList.add('lang-loading');
    }
  </script>
  <style>
    .lang-loading [data-en] { visibility: hidden; }
  </style>
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>
  <div id="keyboard-tip" class="keyboard-tip">
    <span><kbd>J</kbd> next <kbd>K</kbd> prev <kbd>V</kbd> open</span>
    <button id="keyboard-tip-close" aria-label="Dismiss">&times;</button>
  </div>
  <script is:inline>
    (function() {
      // Keyboard tip dismissal
      var tip = document.getElementById('keyboard-tip');
      if (localStorage.getItem('keyboard-tip-dismissed')) {
        tip.style.display = 'none';
      }
      document.getElementById('keyboard-tip-close').addEventListener('click', function() {
        tip.style.display = 'none';
        localStorage.setItem('keyboard-tip-dismissed', '1');
      });

      // Keyboard navigation
      var activeIndex = -1;

      function getCards() {
        return document.querySelectorAll('.news-card');
      }

      function setActive(index) {
        var cards = getCards();
        if (index < 0 || index >= cards.length) return;
        var prev = cards[activeIndex];
        if (prev) prev.classList.remove('active');
        activeIndex = index;
        cards[activeIndex].classList.add('active');
        cards[activeIndex].scrollIntoView({ block: 'nearest', behavior: 'smooth' });
      }

      document.addEventListener('keydown', function(e) {
        // Ignore when typing in inputs
        var tag = e.target.tagName;
        if (tag === 'INPUT' || tag === 'TEXTAREA' || tag === 'SELECT' || e.target.isContentEditable) return;

        var cards = getCards();
        if (!cards.length) return;

        if (e.key === 'j' || e.key === 'J') {
          e.preventDefault();
          setActive(Math.min(activeIndex + 1, cards.length - 1));
        } else if (e.key === 'k' || e.key === 'K') {
          e.preventDefault();
          setActive(Math.max(activeIndex - 1, 0));
        } else if (e.key === 'v' || e.key === 'V') {
          if (activeIndex >= 0 && activeIndex < cards.length) {
            e.preventDefault();
            var link = cards[activeIndex].querySelector('.card-title');
            if (link) window.open(link.href, '_blank');
          }
        }
      });
    })();
  </script>
</body>
</html>
