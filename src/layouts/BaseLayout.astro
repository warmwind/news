---
import Header from '../components/Header.astro';
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  structuredData?: Record<string, any> | Record<string, any>[];
  noindex?: boolean;
  lang?: string;
  ogLocale?: string;
  hreflangLinks?: Array<{ lang: string; href: string }>;
}

const { title = "Oscar's News", description = "AI-curated news aggregation", structuredData, noindex = false, lang = 'en', ogLocale = 'en_US', hreflangLinks = [] } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Oscar's News",
  "url": "https://news.oscarjiang.site",
  "description": "AI-curated news aggregation",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://news.oscarjiang.site/?q={search_term_string}",
    "query-input": "required name=search_term_string"
  }
};

const allStructuredData = structuredData
  ? Array.isArray(structuredData)
    ? [websiteSchema, ...structuredData]
    : [websiteSchema, structuredData]
  : [websiteSchema];
---
<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta name="robots" content={noindex ? "noindex, nofollow" : "index, follow"} />
  <link rel="canonical" href={canonicalURL.href} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL.href} />
  <meta property="og:site_name" content="Oscar's News" />
  <meta property="og:locale" content={ogLocale} />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <link rel="alternate" type="application/rss+xml" title="Oscar's News RSS" href="/rss.xml" />
  {hreflangLinks.map(link => (
    <link rel="alternate" hreflang={link.lang} href={link.href} />
  ))}
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  {allStructuredData.map(data => (
    <script type="application/ld+json" set:html={JSON.stringify(data)} />
  ))}
  <ClientRouter />
  <script is:inline>
    var theme = localStorage.getItem('theme') || (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
    document.documentElement.setAttribute('data-theme', theme);
    // One-time migration: redirect users with saved non-English lang preference
    var savedLang = localStorage.getItem('lang');
    if (savedLang && savedLang !== 'en' && document.documentElement.getAttribute('lang') === 'en') {
      localStorage.removeItem('lang');
      var path = window.location.pathname;
      window.location.href = '/' + savedLang + (path === '/' ? '/' : path);
    }
    // Preserve theme across client-side navigations
    document.addEventListener('astro:before-swap', function(ev) {
      ev.newDocument.documentElement.setAttribute('data-theme', document.documentElement.getAttribute('data-theme'));
    });
  </script>
</head>
<body>
  <Header lang={lang} />
  <main>
    <slot />
  </main>
  <div id="keyboard-tip" class="keyboard-tip">
    <span><kbd>J</kbd> next <kbd>K</kbd> prev <kbd>V</kbd> open</span>
    <button id="keyboard-tip-close" aria-label="Dismiss">&times;</button>
  </div>
  <script is:inline data-astro-rerun>
    (function() {
      // Keyboard tip dismissal
      var tip = document.getElementById('keyboard-tip');
      if (localStorage.getItem('keyboard-tip-dismissed')) {
        tip.style.display = 'none';
      }
      document.getElementById('keyboard-tip-close').addEventListener('click', function() {
        tip.style.display = 'none';
        localStorage.setItem('keyboard-tip-dismissed', '1');
      });

      // Read state
      var readUrls = JSON.parse(sessionStorage.getItem('read-articles') || '[]');
      var readSet = {};
      for (var r = 0; r < readUrls.length; r++) readSet[readUrls[r]] = true;

      function markRead(card) {
        var link = card.querySelector('.card-title');
        if (!link) return;
        var url = link.getAttribute('href');
        if (url && !readSet[url]) {
          readSet[url] = true;
          readUrls.push(url);
          sessionStorage.setItem('read-articles', JSON.stringify(readUrls));
        }
        card.classList.add('read');
      }

      function applyReadState() {
        var cards = document.querySelectorAll('.news-card');
        for (var i = 0; i < cards.length; i++) {
          var link = cards[i].querySelector('.card-title');
          if (link && readSet[link.getAttribute('href')]) {
            cards[i].classList.add('read');
          }
        }
      }

      applyReadState();
      // Re-apply read state when new cards are loaded via infinite scroll
      if (window.__newsListObserver) window.__newsListObserver.disconnect();
      window.__newsListObserver = new MutationObserver(function() { applyReadState(); });
      var newsList = document.getElementById('news-list');
      if (newsList) window.__newsListObserver.observe(newsList, { childList: true });

      // Keyboard navigation
      var activeIndex = -1;

      function getCards() {
        return document.querySelectorAll('.news-card');
      }

      function setActive(index) {
        var cards = getCards();
        if (index < 0 || index >= cards.length) return;
        var prev = cards[activeIndex];
        if (prev) prev.classList.remove('active');
        activeIndex = index;
        cards[activeIndex].classList.add('active');
        markRead(cards[activeIndex]);
        cards[activeIndex].scrollIntoView({ block: 'nearest', behavior: 'smooth' });
      }

      // Remove old document-level listeners before re-adding (prevents duplicates across navigations)
      if (window.__newsClickHandler) document.removeEventListener('click', window.__newsClickHandler);
      if (window.__newsKeyHandler) document.removeEventListener('keydown', window.__newsKeyHandler);

      window.__newsClickHandler = function(e) {
        var link = e.target.closest('.card-title');
        if (link) {
          var card = link.closest('.news-card');
          if (card) markRead(card);
        }
      };

      window.__newsKeyHandler = function(e) {
        var tag = e.target.tagName;
        if (tag === 'INPUT' || tag === 'TEXTAREA' || tag === 'SELECT' || e.target.isContentEditable) return;

        var cards = getCards();
        if (!cards.length) return;

        if (e.key === 'j' || e.key === 'J') {
          e.preventDefault();
          setActive(Math.min(activeIndex + 1, cards.length - 1));
        } else if (e.key === 'k' || e.key === 'K') {
          e.preventDefault();
          setActive(Math.max(activeIndex - 1, 0));
        } else if (e.key === 'v' || e.key === 'V') {
          if (activeIndex >= 0 && activeIndex < cards.length) {
            e.preventDefault();
            markRead(cards[activeIndex]);
            var link = cards[activeIndex].querySelector('.card-title');
            if (link) window.open(link.href, '_blank');
          }
        }
      };

      document.addEventListener('click', window.__newsClickHandler);
      document.addEventListener('keydown', window.__newsKeyHandler);
    })();
  </script>
</body>
</html>
