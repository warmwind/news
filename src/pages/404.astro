---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Page Not Found - Oscar's News" description="The page you're looking for doesn't exist." noindex>
  <div class="not-found">
    <h1>404</h1>
    <p>The page you're looking for doesn't exist.</p>
    <a href="/">Back to homepage</a>
  </div>
</BaseLayout>

<style>
  .not-found {
    text-align: center;
    padding: 4rem 1rem;
  }

  .not-found h1 {
    font-size: 4rem;
    font-weight: 700;
    color: var(--text);
    margin-bottom: 0.5rem;
  }

  .not-found p {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }
</style>
