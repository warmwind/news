---
interface Props {
  active?: string;
  lang?: string;
}

const { active = 'all', lang = 'en' } = Astro.props;
const prefix = lang === 'en' ? '' : `/${lang}`;

const categories = [
  { slug: 'all', label: 'All', href: prefix ? `${prefix}/` : '/' },
  { slug: 'tech', label: 'Tech', href: `${prefix}/tech` },
  { slug: 'ai', label: 'AI', href: `${prefix}/ai` },
  { slug: 'economic', label: 'Economic', href: `${prefix}/economic` },
  { slug: 'github', label: 'GitHub', href: `${prefix}/github` },
  { slug: 'sports', label: 'Sports', href: `${prefix}/sports` },
];
---
<nav class="category-nav" aria-label="Category navigation">
  {categories.map(cat => (
    <a
      href={cat.href}
      class:list={['pill', { active: active === cat.slug }]}
    >
      {cat.label}
    </a>
  ))}
</nav>

<style>
  .category-nav {
    display: flex;
    gap: 0.5rem;
    overflow-x: auto;
    padding-bottom: 0.25rem;
    margin-bottom: 1.5rem;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .category-nav::-webkit-scrollbar {
    display: none;
  }

  .pill {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    white-space: nowrap;
    background: var(--pill-bg);
    color: var(--text-secondary);
    text-decoration: none;
    transition: background 0.15s, color 0.15s;
  }

  .pill:hover {
    color: var(--text);
    text-decoration: none;
  }

  .pill.active {
    background: var(--pill-active-bg);
    color: var(--pill-active-text);
  }
</style>
